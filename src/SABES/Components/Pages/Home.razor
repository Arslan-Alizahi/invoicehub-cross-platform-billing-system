@page "/"
@inject IBillService BillService
@inject IItemService ItemService
@inject ICategoryService CategoryService

<div class="container-fluid p-3">
    <!-- Welcome Message -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center">
                    <h4 class="text-primary mb-2">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </h4>
                    <p class="text-muted mb-0">Welcome to your business management system</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mb-4">
        <div class="col-6 col-md-3 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-tags fa-2x text-primary mb-2"></i>
                    <h4 class="mb-1">@totalCategories</h4>
                    <small class="text-muted">Categories</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-box fa-2x text-info mb-2"></i>
                    <h4 class="mb-1">@totalItems</h4>
                    <small class="text-muted">Products</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-file-invoice fa-2x text-success mb-2"></i>
                    <h4 class="mb-1">@totalBills</h4>
                    <small class="text-muted">Total Bills</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                    <h4 class="mb-1">@pendingBills</h4>
                    <small class="text-muted">Pending</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <h5 class="mb-3">
                <i class="fas fa-bolt"></i> Quick Actions
            </h5>
        </div>
        <div class="col-6 col-md-3 mb-3">
            <a href="/billing" class="card text-decoration-none">
                <div class="card-body text-center">
                    <i class="fas fa-calculator fa-2x text-primary mb-2"></i>
                    <h6 class="mb-0">New Bill</h6>
                </div>
            </a>
        </div>
        <div class="col-6 col-md-3 mb-3">
            <a href="/items" class="card text-decoration-none">
                <div class="card-body text-center">
                    <i class="fas fa-plus fa-2x text-success mb-2"></i>
                    <h6 class="mb-0">Add Product</h6>
                </div>
            </a>
        </div>
        <div class="col-6 col-md-3 mb-3">
            <a href="/categories" class="card text-decoration-none">
                <div class="card-body text-center">
                    <i class="fas fa-tags fa-2x text-info mb-2"></i>
                    <h6 class="mb-0">Categories</h6>
                </div>
            </a>
        </div>
        <div class="col-6 col-md-3 mb-3">
            <a href="/bills" class="card text-decoration-none">
                <div class="card-body text-center">
                    <i class="fas fa-history fa-2x text-secondary mb-2"></i>
                    <h6 class="mb-0">Bill History</h6>
                </div>
            </a>
        </div>
    </div>

    <!-- Recent Bills -->
    @if (recentBills.Any())
    {
        <div class="row">
            <div class="col-12">
                <h5 class="mb-3">
                    <i class="fas fa-clock"></i> Recent Bills
                </h5>
                @foreach (var bill in recentBills.Take(5))
                {
                    <div class="card mb-2">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">@bill.BillNumber</h6>
                                    <small class="text-muted">@bill.CreatedAt.ToString("dd/MM/yyyy")</small>
                                </div>
                                <div class="text-end">
                                    <span class="currency">â‚¨@bill.TotalAmount.ToString("N0")</span>
                                    <br>
                                    <span class="badge @GetStatusClass(bill.Status)">@bill.Status</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Footer -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="text-center py-3">
                <small class="text-muted">
                    <i class="fas fa-code"></i> Built with <strong class="text-primary">CodingZoo</strong>
                </small>
            </div>
        </div>
    </div>
</div>

@code {
    private int totalCategories = 0;
    private int totalItems = 0;
    private int totalBills = 0;
    private int pendingBills = 0;
    private List<Bill> recentBills = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboardData();
    }

    private async Task LoadDashboardData()
    {
        try
        {
            var categories = await CategoryService.GetAllCategoriesAsync();
            totalCategories = categories.Count;

            var items = await ItemService.GetAllItemsAsync();
            totalItems = items.Count;

            var bills = await BillService.GetAllBillsAsync();
            totalBills = bills.Count;
            pendingBills = bills.Count(b => b.Status == BillStatus.PaymentPending);

            recentBills = bills.OrderByDescending(b => b.CreatedAt).Take(5).ToList();
        }
        catch (Exception ex)
        {
            // Handle error - could add logging here
            Console.WriteLine($"Error loading dashboard data: {ex.Message}");
        }
    }

    private string GetStatusClass(BillStatus status)
    {
        return status switch
        {
            BillStatus.Paid => "status-paid",
            BillStatus.PaymentPending => "status-pending",
            BillStatus.Quotation => "status-quotation",
            _ => "bg-secondary"
        };
    }
}
