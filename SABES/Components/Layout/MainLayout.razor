@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div class="status-bar-safe-area"></div>

<!-- App Header -->
<header class="bg-primary text-white py-3 px-3 shadow-sm">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h4 class="mb-0 fw-bold d-flex align-items-center gap-2">
                <i class="fas fa-chart-line"></i> InvoiceHub
            </h4>
            <small class="opacity-75">Business Management System</small>
        </div>
    </div>
</header>

<div class="main-content">
    @Body
</div>

<nav class="bottom-nav">
    <div class="d-flex justify-content-around align-items-center">
        <a href="/" class="nav-item @GetActiveClass("/")">
            <div class="nav-icon-container">
                <i class="fas fa-home"></i>
            </div>
            <span class="nav-label">Home</span>
        </a>
        <a href="/categories" class="nav-item @GetActiveClass("/categories")">
            <div class="nav-icon-container">
                <i class="fas fa-layer-group"></i>
            </div>
            <span class="nav-label">Categories</span>
        </a>
        <a href="/items" class="nav-item @GetActiveClass("/items")">
            <div class="nav-icon-container">
                <i class="fas fa-box"></i>
            </div>
            <span class="nav-label">Products</span>
        </a>
        <a href="/lowstock" class="nav-item @GetActiveClass("/lowstock")">
            <div class="nav-icon-container">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <span class="nav-label">Low Stock</span>
        </a>
        <a href="/billing" class="nav-item @GetActiveClass("/billing")">
            <div class="nav-icon-container">
                <i class="fas fa-plus-circle"></i>
            </div>
            <span class="nav-label">New Bill</span>
        </a>
        <a href="/bills" class="nav-item @GetActiveClass("/bills")">
            <div class="nav-icon-container">
                <i class="fas fa-file-invoice-dollar"></i>
            </div>
            <span class="nav-label">Bills</span>
        </a>
    </div>
</nav>

@code {
    private string GetActiveClass(string path)
    {
        var currentPath = Navigation.ToBaseRelativePath(Navigation.Uri);
        if (string.IsNullOrEmpty(currentPath) && path == "/")
            return "active";

        return currentPath.StartsWith(path.TrimStart('/')) ? "active" : "";
    }
}
