@page "/bills/{BillId:int}"
@inject IBillService BillService
@inject IFileService FileService
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation

<div class="container-fluid p-3">
    @if (isLoading)
    {
        <div class="text-center p-4">
            <div class="spinner"></div>
            <p class="mt-2">Loading bill details...</p>
        </div>
    }
    else if (bill == null)
    {
        <div class="card">
            <div class="card-body text-center p-5">
                <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                <h5>Bill Not Found</h5>
                <p class="text-muted">The requested bill could not be found.</p>
                <a href="/bills" class="btn btn-primary">
                    <i class="fas fa-arrow-left"></i> Back to Bills
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- Header -->
        <div class="row mb-3">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4><i class="fas fa-file-invoice"></i> @bill.BillNumber</h4>
                        <small class="text-muted">Created on @bill.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                    </div>
                    <div class="d-flex gap-2">
                        <button class="btn btn-outline-primary" @onclick="ExportAsImage">
                            <i class="fas fa-download"></i> Export as PDF
                        </button>
                        <button class="btn btn-primary" @onclick="ShareAsImage">
                            <i class="fas fa-share-alt"></i> Share PDF
                        </button>
                        <a href="/bills" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bill Header Card -->
        <div class="card mb-3">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <div>
                            <h4 class="mb-1">InvoiceHub</h4>
                            <small class="opacity-75">Business Management System</small>
                        </div>
                    </div>
                    <span class="badge @GetStatusClass(bill.Status) fs-6">@bill.Status</span>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-primary mb-2">Complete Business Solutions</h6>
                        <p class="text-muted mb-0">
                            <small><i class="fas fa-code"></i> Built with CodingZoo</small>
                        </p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <p class="mb-1"><strong>Bill No:</strong> @bill.BillNumber</p>
                        <p class="mb-1"><strong>Date:</strong> @bill.CreatedAt.ToString("dd/MM/yyyy")</p>
                        @if (bill.Status == BillStatus.Paid && bill.PaidAt.HasValue)
                        {
                            <p class="mb-0 text-success"><strong>Paid:</strong> @bill.PaidAt.Value.ToString("dd/MM/yyyy")</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Customer Information -->
        @if (!string.IsNullOrEmpty(bill.CustomerName) || !string.IsNullOrEmpty(bill.CustomerPhone) || !string.IsNullOrEmpty(bill.CustomerAddress))
        {
            <div class="card mb-3">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-user"></i> Customer Information</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        @if (!string.IsNullOrEmpty(bill.CustomerName))
                        {
                            <div class="col-md-4">
                                <p class="mb-1"><strong>Name:</strong></p>
                                <p class="text-muted">@bill.CustomerName</p>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(bill.CustomerPhone))
                        {
                            <div class="col-md-4">
                                <p class="mb-1"><strong>Phone:</strong></p>
                                <p class="text-muted">@bill.CustomerPhone</p>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(bill.CustomerAddress))
                        {
                            <div class="col-md-4">
                                <p class="mb-1"><strong>Address:</strong></p>
                                <p class="text-muted">@bill.CustomerAddress</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        <!-- Bill Items -->
        <div class="card mb-3">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-shopping-cart"></i> Items (@bill.BillItems.Count)</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>Company</th>
                                <th>Unit Price</th>
                                <th>Quantity</th>
                                <th class="text-end">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in bill.BillItems)
                            {
                                <tr>
                                    <td>
                                        <div>
                                            <strong>@item.ItemName</strong>
                                            @if (!string.IsNullOrEmpty(item.ItemCategory))
                                            {
                                                <br><span class="badge bg-info">@item.ItemCategory</span>
                                            }
                                            @if (!string.IsNullOrEmpty(item.ItemElectricalDetails))
                                            {
                                                <br><small class="text-muted">@item.ItemElectricalDetails</small>
                                            }
                                        </div>
                                    </td>
                                    <td>@item.ItemCompany</td>
                                    <td class="currency">‚Ç®@item.UnitPrice.ToString("N0")</td>
                                    <td>@item.Quantity</td>
                                    <td class="text-end currency">‚Ç®@item.LineTotal.ToString("N0")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Bill Summary -->
        <div class="card mb-3">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-calculator"></i> Bill Summary</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        @if (!string.IsNullOrEmpty(bill.Notes))
                        {
                            <div class="mb-3">
                                <h6>Notes:</h6>
                                <p class="text-muted">@bill.Notes</p>
                            </div>
                        }
                    </div>
                    <div class="col-md-6">
                        <table class="table table-sm">
                            <tr>
                                <td><strong>Subtotal:</strong></td>
                                <td class="text-end currency"><strong>‚Ç®@bill.SubTotal.ToString("N0")</strong></td>
                            </tr>
                            @if (bill.DiscountPercentage > 0)
                            {
                                <tr>
                                    <td>Discount (@bill.DiscountPercentage%):</td>
                                    <td class="text-end currency">‚Ç®@bill.DiscountAmount.ToString("N0")</td>
                                </tr>
                            }
                            <tr class="table-success">
                                <td><strong>Total Amount:</strong></td>
                                <td class="text-end currency"><strong>‚Ç®@bill.TotalAmount.ToString("N0")</strong></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>

      

        <!-- Actions -->
        <div class="card">
            <div class="card-body">
                <div class="d-flex flex-wrap gap-2">
                    @if (bill.Status != BillStatus.Paid)
                    {
                        <button class="btn btn-success" @onclick="() => UpdateStatus(BillStatus.Paid)">
                            <i class="fas fa-check"></i> Mark as Paid
                        </button>
                    }
                    @if (bill.Status != BillStatus.PaymentPending)
                    {
                        <button class="btn btn-warning" @onclick="() => UpdateStatus(BillStatus.PaymentPending)">
                            <i class="fas fa-clock"></i> Mark as Pending
                        </button>
                    }
                    @if (bill.Status != BillStatus.Quotation)
                    {
                        <button class="btn btn-info" @onclick="() => UpdateStatus(BillStatus.Quotation)">
                            <i class="fas fa-file-alt"></i> Mark as Quotation
                        </button>
                    }
                    <button class="btn btn-outline-success" @onclick="ExportAsImage">
                        <i class="fas fa-download"></i> Export as PDF
                    </button>
                    <button class="btn btn-primary" @onclick="ShareAsImage">
                        <i class="fas fa-share-alt"></i> Share PDF
                    </button>
                    <button class="btn btn-outline-danger" @onclick="DeleteBill">
                        <i class="fas fa-trash"></i> Delete Bill
                    </button>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="text-center text-muted">
                    <small>
                        <i class="fas fa-code"></i> Developed by <strong>Arslandevs</strong>
                    </small>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int BillId { get; set; }

    private Bill? bill;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadBill();
    }

    private async Task LoadBill()
    {
        isLoading = true;
        try
        {
            bill = await BillService.GetBillByIdAsync(BillId);
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading bill: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetStatusClass(BillStatus status)
    {
        return status switch
        {
            BillStatus.Paid => "status-paid",
            BillStatus.PaymentPending => "status-pending",
            BillStatus.Quotation => "status-quotation",
            _ => "bg-secondary"
        };
    }

    private async Task UpdateStatus(BillStatus newStatus)
    {
        if (bill == null) return;

        try
        {
            var updated = await BillService.UpdateBillStatusAsync(bill.Id, newStatus);
            if (updated)
            {
                bill.Status = newStatus;
                if (newStatus == BillStatus.Paid)
                {
                    bill.PaidAt = DateTime.Now;
                }
                else
                {
                    bill.PaidAt = null;
                }
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error updating bill status: {ex.Message}");
        }
    }

    private async Task ExportAsImage()
    {
        if (bill == null) return;

        try
        {
#if ANDROID
            // Use native Android file saving for better compatibility
            var filePath = await BillService.ExportBillAsPdfToFileAsync(bill.Id);
            await JSRuntime.InvokeVoidAsync("showToast", "‚úÖ Bill exported as PDF to Downloads folder!", "success");
#else
            // Use JavaScript download for other platforms
            var pdfBytes = await BillService.ExportBillAsPdfAsync(bill.Id);
            var base64 = Convert.ToBase64String(pdfBytes);
            var dataUrl = $"data:application/pdf;base64,{base64}";

            await JSRuntime.InvokeVoidAsync("downloadFile", dataUrl, $"Bill_{bill.BillNumber}.pdf");
            await JSRuntime.InvokeVoidAsync("showToast", "‚úÖ Bill exported as PDF successfully!", "success");
#endif
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("showToast", $"‚ùå PDF Export failed: {ex.Message}", "error");
        }
    }

    private async Task ShareAsImage()
    {
        if (bill == null) return;

        try
        {
            // Generate PDF bytes
            var pdfBytes = await BillService.ExportBillAsPdfAsync(bill.Id);
            var filename = $"Bill_{bill.BillNumber}.pdf";
            var title = $"SABES Bill - {bill.BillNumber}";

            // Use FileService to share the PDF
            await FileService.ShareFileAsync(pdfBytes, filename, "application/pdf", title);

            await JSRuntime.InvokeVoidAsync("showToast", "üì± Share menu opened!", "success");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("showToast", $"‚ùå Share failed: {ex.Message}", "error");
        }
    }



    private async Task DeleteBill()
    {
        if (bill == null) return;

        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm",
            $"Are you sure you want to delete bill {bill.BillNumber}? This action cannot be undone.");

        if (!confirmed) return;

        try
        {
            var deleted = await BillService.DeleteBillAsync(bill.Id);
            if (deleted)
            {
                Navigation.NavigateTo("/bills");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error deleting bill: {ex.Message}");
        }
    }
}
